---
const { url , size }= Astro.props;
import * as Icon from "@astropub/icons";
---

<div class="outer-circle">
<a href={url}>
    <div class="arrow">
        <Icon.ArrowRight size={size} fill="white" />
    </div>
</a>
</div>
<style>
.outer-circle:hover{
  background-color: #1b1b1b;
}

.outer-circle:hover .arrow {
  animation: pulse 1s infinite;
}
@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

.outer-circle {
  width: 75px;
  height: 75px;
  border-radius: 50%;
  background-color: black;
}
.arrow {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
</style>