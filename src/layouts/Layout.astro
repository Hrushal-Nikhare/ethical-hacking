---
import "../styles/reset.css";
import Header from "../components/header.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;

import OpenGraphMeta from '../components/OpenGraphMeta.astro';
const title2 = 'Ethical Hacking';
const description = 'Visit This webpage to learn more about ways to protect yourself from cyber attacks.';
const url = 'https://ethical-hacking.hrushalnikhare.xyz/';
const image = 'https://i.postimg.cc/Qxfr6fQG/thumbnail.png';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1025264341265707"
     crossorigin="anonymous"></script>
    <OpenGraphMeta title={title2} description={description} url={url} image={image} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style>
      #swup {
        width: 100%;
        height: 100%;
      }
    </style>
  </head>
  <body>
    <div id="swup">
      <Header />
      <slot />
    </div>
    <script>
      import Swup from "swup";

      import SwupPreloadPlugin from "@swup/preload-plugin";
      import SwupHeadPlugin from "@swup/head-plugin";
      import SwupSlideTheme from "@swup/slide-theme";
      const swup = new Swup({
        plugins: [
          new SwupSlideTheme({ reversed: true }),
          new SwupPreloadPlugin(),
          new SwupHeadPlugin(),
        ],
      });

      // Nav bar init
      function init() {
        const hamburgerMenu = document.querySelector(".hamburger-menu");
        const sidebar = document.querySelector("#sidebar");
        const cross = document.querySelector(".cross");
        const buffer = document.querySelector(".buffer");

        hamburgerMenu.addEventListener("click", () => {
          sidebar.classList.toggle("slide-in-left");
          buffer.style.display = "block";
        });

        cross.addEventListener("click", () => {
          sidebar.classList.toggle("slide-in-left");
          buffer.style.display = "none";
        });
      }
      
      if (document.readyState === "complete") {
        init();
      } else {
        document.addEventListener("DOMContentLoaded", () => init());
      }

      swup.on("contentReplaced", init);
      import { inject } from '@vercel/analytics';
 
    inject();
    document.title = {title}
    </script>
  </body>
</html>
